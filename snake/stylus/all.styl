html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video {
    margin 0
    padding 0
    border 0
    font-size 100%
    font inherit
    vertical-align baseline
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section {
    display block
}
body {
    line-height 1
}
ol, ul {
    list-style none
}
blockquote, q {
    quotes none
}
blockquote:before, blockquote:after, q:before, q:after {
    content ''
    content none
}
table {
    border-collapse collapse
    border-spacing 0
}
input:-webkit-autofill, input:-webkit-autofill:focus, input:-webkit-autofill:hover {
    -webkit-box-shadow 0 0 0 1000px white inset /* Change the color to your own background color */
    -webkit-text-fill-color #000
}
/* 文字、背景 通用顏色 */
$light-green = #EAF0ED
$dark-green = #3F5D45
$info-font = #ffffff
/* 文字大小 */
$fz-medium = 20px
$fz-large = 24px
$fw-b = bold
$padding-horizontal-product_menu = 16px
$padding-suggest = 10px
$dark-color_light-bg(dark = $dark-green, light = $light-green) {
    color dark
    background light
}
/* http://meyerweb.com/eric/tools/css/reset/
   v2.0 | 20110126
   License: none (public domain)
*/
* {
    box-sizing border-box
    font-family Arial, 'Helvetica Neue', Helvetica, sans-serif
}
a {
    display block
    text-decoration none
}
img {
    max-width 100%
    height auto
    display block
}
.mw940 {
    max-width 940px
    margin 0 auto
}
.mw1024 {
    max-width 1024px
}
header {
    position sticky
    top 0
    z-index 2
    padding-top 30px
    padding-bottom 30px
    background-color #fff
    display flex
    justify-content space-between
    align-items center
    .top-menu {
        display none
        flex-shrink 0
    }
    .logo {
        padding-bottom 5px
        width 100%
    }
    .top-list {
        display flex
        align-items center
        li {
            &:last-of-type {
                margin-left 76px
                padding-left 0
                flex-shrink 0
            }
            a {
                color $dark-green
                font-weight bold
                letter-spacing 5px
                &:not([title='加入購物車']) {
                    padding 0 30px 5px
                    &:hover {
                        border-bottom 5px solid @color
                        margin-bottom -5px
                    }
                }
            }
        }
    }
}
.container {
    display flex
    margin-top 3rem
}
.product {
    width 300px
    margin-right 20px
    font-size $fz-large
    font-weight $fw-b
    text-align center
    color $dark-green
    line-height 2rem
    flex-shrink 0
    h2 {
        padding $padding-horizontal-product_menu 0
        background @color
        color $info-font
    }
    .product-menu a {
        padding $padding-horizontal-product_menu
        $dark-color_light-bg(, ' ')
        outline 1px solid
        outline-color $light-green
        &:hover {
            background-color @outline-color
        }
    }
}
.goods-list {
    display flex
    justify-content space-between
    flex-wrap wrap
    li {
        width 48.3871%
        &:not(:last-of-type) {
            margin-bottom 20px
        }
    }
    .goods-pic {
        position relative
        .suggest {
            position absolute
            top 0px
            left 20px
            color $info-font
            background $dark-green
            padding $padding-suggest
            writing-mode vertical-rl
            line-height 20px
        }
        .heart {
            position absolute
            right 22px
            top 19px
        }
    }
    .detail {
        display flex
        color $dark-green
        border 1px solid $light-green
        .title {
            padding 14px 36.46px
        }
        .price {
            padding 14px 20px 14px 25px
            border-left 1px solid $light-green
        }
    }
    .add-cart {
        text-align center
        padding $padding-horizontal-product_menu 0
        $dark-color_light-bg()
        font-weight $fw-b
        font-size 24px
        line-height 33px
        &:hover {
            box-shadow 0 0 5px 0px @color
        }
    }
}
.chang-page {
    display flex
    justify-content flex-end
    margin-top mt = 20px
    margin-bottom (mt * 3)
    li {
        outline 1px solid $light-green
        & .arrow {
            padding 18px
        }
    }
    a {
        padding 16px 26px
        line-height 28px
        font-size $fz-medium
        color $dark-green
        &:not(.arrow):hover {
            background @color
            color $info-font
        }
    }
}
footer {
    max-width 1024px
    margin 0 auto
}
.mail {
    background $dark-green
    padding 30px 122px
    display flex
    justify-content space-between
    align-items center
    .sweet-mail {
        display flex
        align-items center
        img[alt='icon-small'] {
            width 40px
            height 40px
        }
        .mail-title {
            margin-left 20px
            color $info-font
        }
    }
    .subscribe {
        display flex
        position relative
        width 380px
        height 56px
        .ic-email {
            position absolute
            top 16px
            left 20px
        }
        input[ type='email'] {
            width 316px
            padding-left 44px
            border none
            outline none
            font-size $fz-medium
            font-weight $fw-b
            background-color $light-green
            caret-color $dark-green
            &:focus {
                background-color $info-font
            }
        }
    }
    .submit {
        background url('https://raw.githubusercontent.com/hexschool/webLayoutTraining1st/master/student-week1/arrow_forward-24px.png') no-repeat #FFE180
        background-position center
        width 64px
        border none
    }
}
.info {
    display flex
    justify-content space-between
    padding 30px 122px
    color $dark-green
    font-weight $fw-b
    background $light-green
    .info-left {
        display flex
        flex-direction column
        justify-content space-between
        line-height 1.5
        li:last-of-type {
            display flex
            margin-top 30px
            img {
                max-width 32px
                max-height 32px
                margin-right 8px
            }
        }
    }
    a {
        color @color
    }
    .info-right {
        display flex
        flex-direction column
        justify-content space-between
        align-items flex-end
        .info-right-title {
            letter-spacing 6.44px
            font-size 23px
            line-height 1.5
            writing-mode vertical-rl
            span {
                margin-top 11px
            }
        }
        .copyright {
            margin-top 46px
        }
    }
}
@media only screen and (max-width: 375px) {
    header {
        justify-content space-evenly
        .logo {
            width 114px
            height 18px
            padding 0
        }
        .top-menu {
            display block
        }
        .top-list li:last-of-type {
            margin 0
        }
        .top-list li:not(:last-of-type) {
            display none
        }
    }
    .container {
        flex-direction column
        margin-top 0
    }
    .product {
        width 100%
        margin-bottom 30px
    }
    .goods-list {
        justify-content center
        li {
            width 100%
            padding 0 1.5rem
            margin-bottom 1.5rem
        }
        .goods-pic img {
            width 100%
        }
        .detail {
            .title {
                padding 14px 38px
            }
            .price {
                padding 14px 25px
            }
        }
    }
    .chang-page {
        justify-content center
        margin-top 0
        margin-bottom 1.5rem
    }
    .mail {
        flex-direction column
        padding 30px 0
        .subscribe {
            width 315px
            max-width 100%
            margin-top 33px
            input[ type='email'] {
                width 251px
                font-size 0.75rem
            }
        }
    }
    .info {
        flex-direction column
        justify-content space-between
        padding 39px 1.5rem 1.5rem
        .info-left {
            img[alt='lg-dark'] {
                width 171px
                margin-bottom 40px
            }
            li:last-of-type {
                margin-top 37px
            }
        }
        .info-right {
            align-items flex-start
            .info-right-title {
                display none
            }
            .copyright {
                font-size 16px
                margin-top 23px
            }
        }
    }
}
